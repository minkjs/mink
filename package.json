{
  "name": "mink",
  "version": "1.0.0-alpha.0",
  "description": "Remix your Markdown with this live Markdown server and static-site generator.",
  "preferGlobal": true,
  "main": "mink",
  "bin": {
    "mink": "./lib/mink.js"
  },
  "scripts": {
    "test": "xo && yarn run cover",
    "unit": "ava ./lib/*.test.js /lib/**/*.test.js",
    "cover": "nyc --reporter=lcov --reporter=html --reporter=text ava lib/*.test.js lib/**/*.test.js && yarn run echo-html-cov-link",
    "echo-html-cov-link": "echo \"Coverage report: coverage/lcov-report/index.html\"",
    "coveralls": "cat ./coverage/lcov.info | ./node_modules/.bin/coveralls -v",
    "precommit": "yarn test",
    "preinstall": "rm -rf node_modules/app || true",
    "postinstall": "ln -s ../ node_modules/app"
  },
  "repository": {
    "type": "git",
    "url": "git+ssh://git@github.com/f1lt3r/mink.git"
  },
  "keywords": [
    "markdown",
    "reload",
    "server",
    "html",
    "http",
    "realtime"
  ],
  "author": "F1LT3R",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/f1lt3r/mink/issues"
  },
  "homepage": "https://github.com/f1lt3r/mink#readme",
  "dependencies": {
    "cheerio": "^1.0.0-rc.2",
    "doxdox": "^2.0.3",
    "fs-extra": "^2.1.2",
    "handlebars": "^4.0.11",
    "less": "^3.0.1",
    "magic-params": "^1.1.0",
    "markdown": "^0.5.0",
    "meow": "^4.0.0",
    "micromatch": "^3.0.0",
    "mime": "^1.3.6",
    "nyc": "^11.5.0",
    "typescript": "^2.7.2"
  },
  "devDependencies": {
    "ava": "^0.25.0",
    "coveralls": "^2.13.3",
    "git-hooks": "^1.1.10",
    "git-pre-commit": "^2.1.3",
    "portfinder": "^1.0.13",
    "xo": "^0.18.1"
  },
  "xo": {
    "esnext": true,
    "semicolon": false,
    "globals": [
      "it",
      "describe",
      "beforeEach",
      "before",
      "after",
      "afterEach",
      "__dirname"
    ],
    "rules": {
      "no-console": 1,
      "import/no-extraneous-dependencies": 0,
      "import/no-dynamic-require": 0,
      "import/no-unresolved": 0,
      "new-cap": 0,
      "no-use-extend-native": 0,
      "no-multi-str": 0,
      "space-before-function-paren": 0
    },
    "overrides": [
      {
        "files": "Minkconf.js",
        "rules": {
          "unicorn/filename-case": [
            "error",
            {
              "case": "pascalCase"
            }
          ]
        }
      },
      {
        "files": "**/Minkconf.test.js",
        "rules": {
          "unicorn/filename-case": 0
        }
      },
      {
        "files": "**/*.test.js",
        "rules": {
          "no-console": 0
        }
      }
    ]
  }
}
